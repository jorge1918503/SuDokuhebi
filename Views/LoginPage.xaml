<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SuDokuhebi.Views.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Entry x:Name="usernameEntry" Placeholder="Usuario" />
        <Entry x:Name="passwordEntry" Placeholder="Contraseña" IsPassword="True"/>
        <Button Text="Iniciar Sesión" Clicked="OnLoginClicked"/>
        <Button Text="Registrate" Clicked="OnRegisterClicked"/>
        <Label x:Name="messageLabel" TextColor="Red"/>
    </VerticalStackLayout>
</ContentPage>