<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
            x:Class="SuDokuhebi.Views.PlayPage"  
            Title="‎                             Jugar                           ‎ ">  
   <VerticalStackLayout VerticalOptions="Fill"  
                        HorizontalOptions="Center"  
                        WidthRequest="800"  
                        HeightRequest="600">
       
        <Image Source="logogpt.jpg"
               WidthRequest="200"
               HeightRequest="200"/>

        <Label   
           Text="Elige tu dificultad"
           VerticalOptions="Center"   
           HorizontalOptions="Center" />  
       
       <Grid HorizontalOptions="Center"
             VerticalOptions="End"
             ColumnDefinitions="200,200,200">  
           <Button Grid.Column="0"  
                   Text="Fácil"  
                   Clicked="OnEasyClicked"  
                   VerticalOptions="Center"  
                   HorizontalOptions="Center"  
                   Margin="10" 
                   WidthRequest="150" />  
           
           <Button Grid.Column="1"  
                   Text="Normal"  
                   Clicked="OnPlayClicked"  
                   VerticalOptions="Center"  
                   HorizontalOptions="Center"  
                   Margin="10"
                   WidthRequest="150" />  
           
           <Button Grid.Column="2"  
                   Text="Difícil"  
                   Clicked="OnHardClicked"  
                   VerticalOptions="Center"  
                   HorizontalOptions="Center"  
                   Margin="10"
                   WidthRequest="150" />  
       </Grid>  
   </VerticalStackLayout>  
</ContentPage>