<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SuDokuhebi.Views.PlayPage"
             Title="‎                            Jugar                           ‎ ">
    <Grid RowDefinitions="Auto,auto,auto"
          Padding="10">

        <Label x:Name="UsernameLabel" 
               Grid.Row="0"
               Grid.Column="0"
               Text=""
               TextColor="#b83dba"
               FontSize="35"
               FontAttributes="Bold"
               HorizontalOptions="Start"
               Margin="10,20,0,20" />

        <Label Grid.Row="0"
               Grid.Column="0"
               Text="Elige tu dificultad"
               FontSize="32"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,20,0,20" />

        <ImageButton Source="logout.png"
                     Grid.Row="0"
                     HorizontalOptions="End"
                     WidthRequest="40"
                     HeightRequest="30"
                     CornerRadius="10"
                     BackgroundColor="#b83dba"
                     Clicked="OnLogOutClicked" />

        <Image Grid.Row="1"
               Grid.Column="0"
               Source="partidablur.png"
               WidthRequest="500"
               HeightRequest="400"
               Margin="0,0,0,20" />



        <Grid Grid.Row="2"
              Grid.Column="0"
              HorizontalOptions="Center"
              ColumnDefinitions="200,200,200,200"
              RowDefinitions="auto,65,40,auto">

            <Button Grid.Column="0"
                    Grid.Row="0"
                    Text="Fácil"
                    TextColor="Black"
                    FontAttributes="Bold"
                    Clicked="OnEasyClicked"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Margin="10"
                    WidthRequest="150"
                    BackgroundColor="#b83dba" />

            <Label Grid.Row="1"
                   Grid.Column="0"
                   Text="El juego clásico en miniatura"
                   HorizontalTextAlignment="Center" 
                   WidthRequest="100"/>

            <Label Grid.Row="2"
                   Grid.Column="0"
                   Text="No te confies aunque las distancias sean cortas"
                   HorizontalTextAlignment="Center" />

            <Button Grid.Column="1"
                    Grid.Row="0"
                    Text="Normal"
                    TextColor="Black"
                    FontAttributes="Bold"
                    Clicked="OnPlayClicked"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Margin="10"
                    WidthRequest="150"
                    BackgroundColor="#b83dba" />

            <Label Grid.Row="1"
                   Grid.Column="1"
                   Text="Asesta el golpe letal a la serpiente siendo tu quien se avalanza sobre ella"
                   HorizontalTextAlignment="Center" 
                   WidthRequest="170"/>

            <Label Grid.Row="2"
                   Grid.Column="1"
                   Text="Deja que ella se acerque a ti y muere"
                   HorizontalTextAlignment="Center" />

            <Button Grid.Column="2"
                    Grid.Row="0"
                    Text="Difícil"
                    TextColor="Black"
                    FontAttributes="Bold"
                    Clicked="OnHardClicked"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Margin="10"
                    WidthRequest="150"
                    BackgroundColor="#b83dba" />

            <Label Grid.Row="1"
                   Grid.Column="2"
                   Text="Cuadra la cabeza de la serpiente en una de tus miras"
                   HorizontalTextAlignment="Center" 
                   WidthRequest="190"/>

            <Label Grid.Row="2"
                   Grid.Column="2"
                   Text="No te acerques demasiado y dispara!!"
                   HorizontalTextAlignment="Center" 
                   WidthRequest="180"/>

            <Button Grid.Column="3"
                    Grid.Row="0"
                    Text="Imposible"
                    TextColor="Black"
                    FontAttributes="Bold"
                    Clicked="OnImposibleClicked"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Margin="10"
                    WidthRequest="150"
                    BackgroundColor="#b83dba" />

            <Label Grid.Row="1"
                   Grid.Column="3"
                   Text="Una serpiente más inteligente que nunca"
                   HorizontalTextAlignment="Center" 
                   WidthRequest="190"/>

            <Label Grid.Row="2"
                   Grid.Column="3"
                   Text="No te quedes sin tiempo"
                   HorizontalTextAlignment="Center" />

            <Label Grid.Row="3"
                   Grid.Column="3"
                   Text="Dispara y sobretodo huye!!"
                   HorizontalTextAlignment="Center" 
                   Margin="-15"/>

        </Grid>
    </Grid>
</ContentPage>