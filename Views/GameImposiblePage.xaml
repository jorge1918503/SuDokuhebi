<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SuDokuhebi.Views.GameImposiblePage">
    <VerticalStackLayout VerticalOptions="Fill"
                         Padding="-10">

        <HorizontalStackLayout WidthRequest="700">

            <Label x:Name="Movements"
                   Text="Movimientos: 0"
                   FontSize="18"
                   Margin="10"
                   HorizontalOptions="End"
                   VerticalOptions="Center" />

            <Label x:Name="TimerLabel"
                   Text="Tiempo: 0s"
                   FontSize="18"
                   Margin="10"
                   HorizontalOptions="End"
                   VerticalOptions="Center" />

            <!-- Icono Toggle de Sonido -->
            <Image x:Name="SoundIcon"
                   Source="soundon.png"
                   WidthRequest="30"
                   HeightRequest="30"
                   Margin="10"
                   HorizontalOptions="End">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnSoundIconTapped" />
                </Image.GestureRecognizers>
            </Image>

        </HorizontalStackLayout>

        <Grid x:Name="GameGrid"
              Padding="3"
              RowSpacing="2"
              ColumnSpacing="2"
              WidthRequest="700"
              HeightRequest="600">
            <!-- Celdas del Sudoku se generan dinÃ¡micamente -->
        </Grid>

        <HorizontalStackLayout WidthRequest="700">

            <ImageButton Source="back.png"
                         Clicked="OnBackClicked"
                         BackgroundColor="#d77cd9"
                         Margin="10"
                         WidthRequest="100"
                         CornerRadius="10" />

            <Button Text="Reiniciar"
                    TextColor="white"
                    Clicked="OnRestartClicked"
                    BackgroundColor="#d77cd9"
                    FontSize="18"
                    Margin="420,10,0,10"
                    WidthRequest="150"
                    HorizontalOptions="Center" />

        </HorizontalStackLayout>


    </VerticalStackLayout>
</ContentPage>