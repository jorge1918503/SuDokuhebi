<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SuDokuhebi.Views.GameShootPage"
             Title="GameShootPage">
    <VerticalStackLayout VerticalOptions="Fill">

        <HorizontalStackLayout WidthRequest="700">

            <Label x:Name="Movements"
                   Text="Movimientos: 0"
                   FontSize="18"
                   Margin="10"
                   HorizontalOptions="End"
                   VerticalOptions="Center" />

            <Label x:Name="TimerLabel"
                   Text="Tiempo: 0s"
                   FontSize="18"
                   Margin="10"
                   HorizontalOptions="End"
                   VerticalOptions="Center" />

        </HorizontalStackLayout>

        <Grid x:Name="GameGrid"
              Padding="3"
              RowSpacing="2"
              ColumnSpacing="2"
              WidthRequest="700"
              HeightRequest="600">
            <!-- Celdas del Sudoku se generan dinÃ¡micamente -->
        </Grid>

        <Button Text="Reiniciar"
                Clicked="OnRestartClicked"
                BackgroundColor="LightGray"
                FontSize="18"
                Margin="10"
                WidthRequest="700" />


    </VerticalStackLayout>
</ContentPage>